{
  "name": "tanvoid0-api",
  "version": "1.0.0",
  "description": "My custom server api",
  "main": "server.js",
  "author": "tanvoid0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14.15.5",
    "yarn":"1.22.5"
  },
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "client": "yarn --cwd client start",
    "server": "nodemon server.js",
    "dev": "concurrently -n 'server,client' -c 'green,blue' \"yarn run server\" \"npm run client\""
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.3.1",
    "heroku": "^7.47.12",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "snapdragon-util": "^5.0.1",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
